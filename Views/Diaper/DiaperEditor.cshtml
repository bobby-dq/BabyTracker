@model DiaperViewModel

<partial name="_Validation"/>

<h5 class="bg-@Model.Theme text-white text-center p-2">@Model.Infant.FirstName: Diaper @Model.Action</h5>

<form asp-action="@Model.Action" method="post">
    <div class="form-group">
        <div>
            <span asp-validation-for="Diaper.DiaperId" class="text-danger"></span>
        </div>
        <input type="hidden" class="form-control" asp-for="Diaper.DiaperId" readonly/>
    </div>
    <div class="form-group">
        <div>
            <span asp-validation-for="Diaper.InfantId" class="text-danger"></span>
        </div>
        <input type="hidden" class="form-control" asp-for="Diaper.InfantId" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Diaper.DiaperType"></label>
        <div>
            <span asp-validation-for="Diaper.DiaperType" class="text-danger"></span>
        </div>
        <select asp-for="Diaper.DiaperType" class="form-control" disabled="@Model.ReadOnly" asp-items="@Html.GetEnumSelectList<DiaperEnum>()">
            <option value="" disabled selected>Choose a Diaper Type</option>
        </select>
        
    </div>
    <div class="form-group">
        <label asp-for="Diaper.Time"></label>
        <div>
            <span asp-validation-for="Diaper.Time" class="text-danger"></span>
        </div>
        @if(Model.ReadOnly)
        {
            <div class="form-control">@Model.Diaper.Time.ToString("HH:mm ddd dd MMM yyyy")</div>
            <input type="hidden" class="form-control" asp-for="Diaper.Time" readonly="@Model.ReadOnly"/>
        }
        else
        {
            <input class="form-control" asp-for="Diaper.Time" readonly="@Model.ReadOnly"/>
        }
    </div>
    <div class="form-group">
        <label asp-for="Diaper.Description"></label>
        <div>
            <span asp-validation-for="Diaper.Description" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Diaper.Description" readonly="@Model.ReadOnly"/>
    </div>
    <div class="form-group">
        <label asp-for="Diaper.Comments"></label>
        <div>
            <span asp-validation-for="Diaper.Comments" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Diaper.Comments" readonly="@Model.ReadOnly"/>
    </div>
    @if (Model.ShowAction)
    {
        <button class="btn btn-@Model.Theme" type="submit">@Model.Action</button>
    }
    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model.Infant.InfantId">Back</a>
</form>