@model MedicationViewModel

<partial name="_Validation"/>

<h5>@Model.Infant.FirstName: Medication @Model.Action</h5>

<form asp-action="@Model.Action" method="post">
     <div class="form-group">
        <div>
            <span asp-validation-for="Medication.InfantId" class="text-danger"></span>
        </div>
        <input type="hidden" class="form-control" asp-for="Medication.InfantId" readonly/>
    </div>
    <div class="form-group">
        <div>
            <span asp-validation-for="Medication.MedicationId" class="text-danger"></span>
        </div>
        <input type="hidden" class="form-control" asp-for="Medication.MedicationId" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Medication.MedicationType"></label>
        <div>
            <span asp-validation-for="Medication.MedicationType" class="text-danger"></span>
        </div>
        <select asp-for="Medication.MedicationType" class="form-control" disabled="@Model.ReadOnly" asp-items="@Html.GetEnumSelectList<MedicationEnum>()">
            <option value="" disabled selected>Choose a Medication Type</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Medication.Date"></label>
        <div>
            <span asp-validation-for="Medication.Date" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Medication.Date" readonly="@Model.ReadOnly" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
    </div>
    <div class="form-group">
        <label asp-for="Medication.Description"></label>
        <div>
            <span asp-validation-for="Medication.Description" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Medication.Description" readonly="@Model.ReadOnly"/>
    </div>
    <div class="form-group">
        <label asp-for="Medication.Comments"></label>
        <div>
            <span asp-validation-for="Medication.Comments" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Medication.Comments" readonly="@Model.ReadOnly"/>
    </div>
    @if (Model.ShowAction)
    {
        <button class="btn btn-@Model.Theme" type="submit">@Model.Action</button>
    }
    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model.Infant.InfantId">Back</a>
</form>