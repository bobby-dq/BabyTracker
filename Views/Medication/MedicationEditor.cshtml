@model MedicationViewModel

<partial name="_Validation"/>

@*
class="relative mb-4"
class="text-red-600"
class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
*@


<div class="container px-5 py-24 mx-auto flex">
    <div class="bg-yellow-100 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
        <div class="text-center">
            <h2 class="-m-8 p-4 rounded-t-lg text-gray-900 bg-yellow-500 text-2xl mb-1 font-medium title-font" > @Model.Action: @Model.Infant.FirstName's Medications</h2>
        </div>

        <form asp-action="@Model.Action" method="post">
            <div class="relative mb-4">
                <div>
                    <span asp-validation-for="Medication.InfantId" class="text-red-600"></span>
                </div>
                <input type="hidden" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Medication.InfantId" readonly/>
            </div>
            <div class="relative mb-4">
                <div>
                    <span asp-validation-for="Medication.MedicationId" class="text-red-600"></span>
                </div>
                <input type="hidden" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Medication.MedicationId" readonly/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Medication.MedicationType"></label>
                <div>
                    <span asp-validation-for="Medication.MedicationType" class="text-red-600"></span>
                </div>
                <select asp-for="Medication.MedicationType" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" disabled="@Model.ReadOnly" asp-items="@Html.GetEnumSelectList<MedicationEnum>()">
                    <option value="" disabled selected>Choose a Medication Type</option>
                </select>
            </div>
            <div class="relative mb-4">
                <label asp-for="Medication.Date"></label>
                <div>
                    <span asp-validation-for="Medication.Date" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Medication.Date" readonly="@Model.ReadOnly" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Medication.Description"></label>
                <div>
                    <span asp-validation-for="Medication.Description" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Medication.Description" readonly="@Model.ReadOnly"/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Medication.Comments"></label>
                <div>
                    <span asp-validation-for="Medication.Comments" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Medication.Comments" readonly="@Model.ReadOnly"/>
            </div>
            <div class="-mb-8 -mx-8 text-center ">
                @if (Model.ShowAction)
                {
                    <button class="text-white @Model.ActionTheme order-0 w-full py-2 px-6 focus:outline-none text-lg" type="submit">@Model.Action</button>
                }            
            </div>
        </form>

        <div class="-mx-8 mt-8 -mb-8 bg-gray-500 text-white text-center hover:bg-gray-600" >
            <a asp-action="Index" asp-controller="Medication" asp-route-id="@Model.Infant.InfantId">
                <div class="w-full order-0 py-1 px-6 focus:outline-none text-lg">@Model.Infant.FirstName's Medications</div>
            </a>  
        </div>
        <div class="-mx-8 mt-8 -mb-8 text-center text-white bg-yellow-500 hover:bg-yellow-600 rounded-b-lg" >
            <a asp-action="Index" asp-controller="Dashboard" asp-route-id="@Model.Infant.InfantId">
                <div class="w-full order-0 py-1 px-6 focus:outline-none text-lg">Back to @Model.Infant.FirstName's Dashboard</div>
            </a>  
        </div>
    </div>
</div>