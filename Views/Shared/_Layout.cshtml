<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>BabyTracker</title>
        <link rel="stylesheet" href="/css/output.css"/>
    </head>
    <body>
        @if (@User.Identity.IsAuthenticated)
        {
            <vc:authenticated-nav-bar/>
        }
        else
        {
            <header class="text-gray-600 body-font shadow-md">
                <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
                    <a class="flex title-font font-medium items-start text-gray-900 mb-4 md:mb-0" href="#dashboard" >
                    <img class="w-10 h-10" src="\icons\iconmonstr-generation-1-240.png" alt="babytracker-logo"/>
                    <span class="ml-3 text-xl">Baby Tracker</span>
                    </a>
                    
                    <nav class="md:ml-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-400	flex flex-wrap items-center text-base justify-center">
                    <a class="mr-5 hover:text-gray-900" asp-page="/Account/Login">Login</a>
                    <a class="mr-5 hover:text-gray-900" asp-page="/Users/Create">Register</a>
                    </nav>
                </div>
            </header>
        }
        <section>
            <div class="m-2 p-2">
                @RenderBody()
            </div>
        </section>
    </body>
</html>


