@model GrowthViewModel
<partial name="_Validation"/>

@*
class="relative mb-4" 
class="text-red-600"
class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
*@


<div class="container px-5 py-24 mx-auto flex">
    <div class="bg-blue-50 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
        <div class="text-center">
            <h2 class="-m-8 p-4 rounded-t-lg text-gray-900 bg-blue-400 text-2xl mb-1 font-medium title-font" > @Model.Action: @Model.Infant.FirstName's Growths</h2>
        </div>

        <form asp-action="@Model.Action" method="post">
            <div class="relative mb-4">
                <div>
                    <span asp-validation-for="Growth.InfantId" class="relative mb-4"></span>
                </div>
                <input type="hidden" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Growth.InfantId" readonly/>
            </div>
            <div class="relative mb-4">
                <div>
                    <span asp-validation-for="Growth.GrowthId" class="text-red-600"></span>
                </div>
                <input type="hidden" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Growth.GrowthId" readonly/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Growth.GrowthType"></label>
                <div>
                    <span asp-validation-for="Growth.GrowthType" class="text-red-600"></span>
                </div>
                <select asp-for="Growth.GrowthType" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" disabled="@Model.ReadOnly" asp-items="@Html.GetEnumSelectList<GrowthEnum>()">
                    <option value="" disabled selected>Choose a Growth Type</option>
                </select>
            </div>
            <div class="relative mb-4">
                <label asp-for="Growth.Amount"></label>
                <div>
                    <span asp-validation-for="Growth.Amount" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Growth.Amount" readonly="@Model.ReadOnly"/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Growth.Date"></label>
                <div>
                    <span asp-validation-for="Growth.Date" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Growth.Date" readonly="@Model.ReadOnly" asp-format="{0:yyyy-MM-dd}"/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Growth.Description"></label>
                <div>
                    <span asp-validation-for="Growth.Description" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Growth.Description" readonly="@Model.ReadOnly"/>
            </div>
            <div class="relative mb-4">
                <label asp-for="Growth.Comments"></label>
                <div>
                    <span asp-validation-for="Growth.Comments" class="text-red-600"></span>
                </div>
                <input class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" asp-for="Growth.Comments" readonly="@Model.ReadOnly"/>
            </div>
            <div class="-mb-8 -mx-8 text-center ">
                @if (Model.ShowAction)
                {
                    <button class="text-white @Model.ActionTheme order-0 w-full py-2 px-6 focus:outline-none text-lg" type="submit">@Model.Action</button>
                }            
            </div>
        </form>
        <div class="-mx-8 mt-8 -mb-8 bg-gray-500 text-white text-center hover:bg-gray-600" >
            <a asp-action="Index" asp-controller="Growth" asp-route-id="@Model.Infant.InfantId">
                <div class="w-full order-0 py-1 px-6 focus:outline-none text-lg">@Model.Infant.FirstName's Growths</div>
            </a>  
        </div>
        <div class="-mx-8 mt-8 -mb-8 text-center text-white bg-blue-400 hover:bg-blue-500 rounded-b-lg" >
            <a asp-action="Index" asp-controller="Dashboard" asp-route-id="@Model.Infant.InfantId">
                <div class="w-full order-0 py-1 px-6 focus:outline-none text-lg">Back to @Model.Infant.FirstName's Dashboard</div>
            </a>  
        </div>
    </div>
</div>
