@model IEnumerable<Infant>
<section class="text-gray-600 body-font">
  <div class="container px-5 py-5 mx-auto">
    <div class="flex flex-col text-center w-full mb-2">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Infants</h1>
    </div>
    <div class="text-center">
        <a class="m-2 center px-6 py-2 text-white bg-green-500 hover:bg-green-600 rounded" asp-action="Create">Create</a>
    </div>
    
    @if (Model.Count() == 0)
    {
        <div class="text-center m-2 shadow-md">
            <p class="mx-auto leading-relaxed text-base">You have no infants in the database as for right now!<br/> Create one to get started!</p>
        </div>
        
    }
    else
    {
        @foreach (Infant i in Model)
        {
            <a asp-action="Index" asp-controller="Dashboard" asp-route-id="@i.InfantId">
                <div class="flex flex-wrap m-2 shadow-md rounded">
                    <div class="p-2 w-full">
                        <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
                            <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" src="\icons\iconmonstr-generation-1-240.png">
                            <div class="flex-grow">
                                <h2 class="text-gray-900 title-font font-medium">@i.FirstName @i.LastName</h2>
                                <p class="text-gray-500">Birthday: @i.Dob.ToString("ddd MMMM dd yyyy")</p>
                                <div>
                                    <a class="pr-2 text-medium text-green-500 hover:text-green-600" asp-action="Details" asp-route-id="@i.InfantId">Details</a>
                                    <a class="p-2 text-medium text-yellow-500 hover:text-yellow-600" asp-action="Edit" asp-route-id="@i.InfantId">Edit</a>
                                    <a class="p-2 text-medium text-red-500 hover:text-red-600" asp-action="Delete" asp-route-id="@i.InfantId">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
    }
  </div>
</section>