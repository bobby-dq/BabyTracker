@model IEnumerable<Infant>

<h4 class="text-center bg-info p-2">Infants</h4>
<div class="table-responsive">
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Infant i in Model)
            {
                <tr>
                    <td>@i.FirstName @i.LastName</td>
                    <td>@i.Dob.ToString("ddd MMMM dd yyyy")</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@i.InfantId">Details</a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@i.InfantId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@i.InfantId">Delete</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-info" asp-controller="Diaper" asp-route-id="@i.InfantId">Diapers</a>
                        <a class="btn btn-sm btn-info" asp-controller="Feeding" asp-route-id="@i.InfantId">Feedings</a>
                        <a class="btn btn-sm btn-info" asp-controller="Growth" asp-route-id="@i.InfantId">Growth</a>
                        <a class="btn btn-sm btn-info" asp-controller="Medication" asp-route-id="@i.InfantId">Medications</a>
                        <a class="btn btn-sm btn-info" asp-controller="Sleep" asp-route-id="@i.InfantId">Sleep</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a class="btn btn-sm btn-primary" asp-action="Create">Create</a>
